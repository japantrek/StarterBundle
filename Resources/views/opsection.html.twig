<div {{ sonata_block_attr(sectionContent.content)  }}>
    {% createphp sectionContent as="rdf" noautotag %}
        <div {{ createphp_attributes(rdf) }}>
            <h1 {{ createphp_attributes( rdf.title ) }}>{{ createphp_content( rdf.title ) }}</h1>
        </div>
    {% endcreatephp %}
    {% if sectionContent.content %}
    	{% if sectionContent.content.body is defined %}
    	    {% createphp sectionContent.content as="rdf" noautotag %}
                <div {{ createphp_attributes(rdf) }}>
                    <div {{ createphp_attributes( rdf.body ) }}>{{ createphp_content( rdf.body ) }}</div>
                </div>
            {% endcreatephp %}
        {% else %}
        	<div>{{ sonata_block_render({ 'name': sectionContent.content.id }) }}</div>
        {% endif %}
    {% endif %}

    {% if sectionContent.block %}
        <div>
            {{ sonata_block_render({ 'name': sectionContent.block.id }) }}
        </div>
    {% endif %}
</div>
